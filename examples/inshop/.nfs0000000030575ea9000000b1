#!/bin/bash

# 1. Mid LR, BS = 256
python train_inshop.py \
seed=42 \
max_epochs=60 \
criterion.args.m=0.4 \
criterion.args.s=64 \
bs_train=256 \
optimizer.args.lr=5e-5 \
gpus=[0]

# 2. Min LR, BS = 256
python train_inshop.py \
seed=42 \
max_epochs=60 \
criterion.args.m=0.4 \
criterion.args.s=64 \
bs_train=256 \
optimizer.args.lr=2.5e-5 \
gpus=[0]

# 3. Max LR, BS = 256
python train_inshop.py \
seed=42 \
max_epochs=60 \
criterion.args.m=0.4 \
criterion.args.s=64 \
bs_train=256 \
optimizer.args.lr=1e-4 \
gpus=[0]

